				{
					"name": "Admin Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200 || pm.response.code === 201) {",
									"    const responseData = pm.response.json();",
									"    const data = responseData.data || responseData;",
									"    if (data.accessToken) {",
									"        pm.environment.set('token', data.accessToken);",
									"        pm.environment.set('userId', data.user.id);",
									"        pm.environment.set('userRole', 'ADMIN');",
									"        console.log('Admin token saved:', data.accessToken);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"tools.rockyhaque@gmail.com\",\n  \"password\": \"password123\"\n}"
						},
